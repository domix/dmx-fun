---
import { getCollection } from 'astro:content';
import DocsLayout from '../../../layouts/DocsLayout.astro';
const base = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const categories = [...new Set(allPosts.map(post => post.data.category))];

  return categories.map(category => {
    const filteredPosts = allPosts.filter(post => post.data.category === category);
    return {
      params: { category: category.toLowerCase().replaceAll(' ', '-') },
      props: {
        posts: filteredPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()),
        category
      },
    };
  });
}

const { posts, category } = Astro.props;
const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.map(post => post.data.category))];
---

<DocsLayout title={`${category} - Blog`} description={`Articles about ${category}`}>
  <div class="blog-header">
    <a href={`${base}blog`} class="back-link">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      All Posts
    </a>
    <h1>{category}</h1>
    <p class="blog-subtitle">
      {posts.length} {posts.length === 1 ? 'article' : 'articles'} in this category
    </p>
  </div>

  <div class="blog-filters">
    <a href={`${base}blog`} class="filter-btn">All Posts</a>
    {categories.map(cat => (
      <a
        href={`${base}blog/category/${cat.toLowerCase().replaceAll(' ', '-')}`}
        class={`filter-btn ${cat === category ? 'active' : ''}`}
      >
        {cat}
      </a>
    ))}
  </div>

  <div class="posts-grid">
    {posts.map((post: any) => (
      <article class="post-card">
          {post.data.image && (
              <a href={`${base}blog/${post.id}`} class="post-image-link">
                  <img src={post.data.image} alt={post.data.title} class="post-image" loading="lazy" />
              </a>
          )}
          <div class="post-content">
              <div class="post-category">{post.data.category}</div>
              <h2 class="post-title">
                  <a href={`${base}blog/${post.id}`}>{post.data.title}</a>
              </h2>
              <p class="post-description">{post.data.description}</p>
              <div class="post-meta">
                  <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                      })}
                  </time>
                  <span class="post-author">{post.data.author}</span>
              </div>
              {post.data.tags.length > 0 && (
                  <div class="post-tags">
                      {post.data.tags.map((tag: string) => (
                          <span class="tag">{tag}</span>
                      ))}
                  </div>
              )}
          </div>
      </article>
    ))}
  </div>
</DocsLayout>

<style>
  .blog-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    margin-bottom: 1rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--color-primary), #6366f1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
  }

  .blog-filters {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 0.5rem 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 20px;
    text-decoration: none;
    color: var(--color-text);
    background-color: var(--color-bg);
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 0.875rem;
  }

  .filter-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px var(--color-shadow);
    border-color: var(--color-primary);
  }
  .post-image-link {
      display: block;
      width: 100%;
      overflow: hidden;
      aspect-ratio: 16 / 9;
  }

  .post-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
  }

  .post-card:hover .post-image {
      transform: scale(1.05);
  }

  .post-content {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      flex: 1;
  }
  .post-category {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-primary);
    color: white;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    align-self: flex-start;
  }

  .post-title {
    margin: 0 0 1rem;
    font-size: 1.5rem;
  }

  .post-title a {
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: var(--color-primary);
  }

  .post-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .post-author {
    font-weight: 500;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background-color: var(--color-code-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
