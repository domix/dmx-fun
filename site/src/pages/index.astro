---
import {site} from "../config/site.ts";
import DocsLayout from '../layouts/DocsLayout.astro';
import {Code} from 'astro:components';
const base = import.meta.env.BASE_URL;
---

<DocsLayout title="Home" description=`${site.slug} - ${site.description}`>
    <div class="hero">
        <h1 class="hero-title">
            <span class="lambda">Œª</span> {site.slug}
        </h1>
        <p class="hero-description">
            {site.description}
        </p>
        <div class="hero-actions">
            <a href=`${base}getting-started` class="btn btn-primary">Get Started</a>
            <a href=`${site.github}` target="_blank" rel="noopener" class="btn btn-secondary">
                View on GitHub
            </a>
        </div>
    </div>

    <div class="features">
        <div class="feature-card">
            <div class="feature-icon">‚ö°</div>
            <h3>Pure Functions</h3>
            <p>Build reliable and testable code with pure functional programming principles.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">üîÑ</div>
            <h3>Immutability</h3>
            <p>Work with immutable data structures to avoid side effects and race conditions.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">üéØ</div>
            <h3>Type Safety</h3>
            <p>Leverage Java's type system for compile-time guarantees and safer code.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">üõ†Ô∏è</div>
            <h3>Rich API</h3>
            <p>Comprehensive collection of functional utilities for everyday programming tasks.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">üì¶</div>
            <h3>Zero Dependencies</h3>
            <p>Lightweight library with no external dependencies, easy to integrate.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">üöÄ</div>
            <h3>Production Ready</h3>
            <p>Battle-tested in production environments with comprehensive test coverage.</p>
        </div>
    </div>
    <div class="quick-example">
        <h2>Demo</h2>
        <Code code={`const foo = 'bar';`} lang="js"/>
        <Code code={`const foo = 'bar';`} lang="js" theme="dark-plus"/>
        <!-- Optional: Enable word wrapping. -->
        <Code code={`const foo = 'bar';`} lang="js" wrap/>
        <!-- Optional: Output inline code. -->
        <p>
            <Code code={`const foo = 'bar';`} lang="js" inline/>
            will be rendered inline.
        </p>
        <!-- Optional: defaultColor -->
        <Code code={`const foo = 'bar';`} lang="js" defaultColor={false}/>
    </div>
    <div class="quick-example">
        <h2>Quick Example</h2>
        <pre is:raw><code class="language-java">import codes.domix.fun.*;

// Compose functions elegantly
Function&lt;String, String&gt; normalize = str -&gt; str.trim().toLowerCase();
Function&lt;String, Integer&gt; toLength = String::length;

var process = normalize.andThen(toLength);
var result = process.apply("  HELLO WORLD  "); // 11

// Handle options safely
Option&lt;User&gt; user = findUserById(id);
String name = user
    .map(User::getName)
    .getOrElse("Anonymous");

// Handle errors functionally
Try&lt;Integer&gt; result = Try.of(() -&gt; Integer.parseInt(input))
    .recover(NumberFormatException.class, e -&gt; 0);</code></pre>
    </div>

    <div class="cta-section">
        <h2>Ready to Get Started?</h2>
        <p>Add functional programming power to your Java projects today.</p>
        <a href=`${base}getting-started` class="btn btn-primary btn-large">View Documentation</a>
    </div>
</DocsLayout>

<style>
    .hero {
        text-align: center;
        padding: 4rem 0;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--color-primary), #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .lambda {
        font-size: 4.5rem;
        display: inline-block;
        margin-right: 0.5rem;
    }

    .hero-description {
        font-size: 1.5rem;
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background-color: var(--color-primary);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--color-primary-hover);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px var(--color-shadow);
    }

    .btn-secondary {
        background-color: transparent;
        color: var(--color-text);
        border-color: var(--color-border);
    }

    .btn-secondary:hover {
        border-color: var(--color-primary);
        color: var(--color-primary);
        transform: translateY(-2px);
    }

    .btn-large {
        padding: 1rem 2.5rem;
        font-size: 1.125rem;
    }

    .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 4rem 0;
    }

    .feature-card {
        background-color: var(--color-surface);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid var(--color-border);
        transition: all 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px var(--color-shadow);
        border-color: var(--color-primary);
    }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-size: 1.25rem;
    }

    .feature-card p {
        color: var(--color-text-secondary);
        margin: 0;
        line-height: 1.6;
    }

    .quick-example {
        background-color: var(--color-surface);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid var(--color-border);
        margin: 4rem 0;
    }

    .quick-example h2 {
        margin-top: 0;
    }

    .quick-example pre {
        margin: 1rem 0 0;
    }

    .cta-section {
        text-align: center;
        padding: 4rem 0;
        margin: 4rem 0;
        background-color: var(--color-surface);
        border-radius: 12px;
        border: 1px solid var(--color-border);
    }

    .cta-section h2 {
        margin-top: 0;
    }

    .cta-section p {
        font-size: 1.125rem;
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .lambda {
            font-size: 3rem;
        }

        .hero-description {
            font-size: 1.25rem;
        }

        .features {
            grid-template-columns: 1fr;
        }
    }
</style>
