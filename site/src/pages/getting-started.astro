---
import {site} from "../config/site.ts";
import DocsLayout from '../layouts/DocsLayout.astro';
import {Content as MavenConfig} from '../data/code/getting-started/maven.mdx';
import {Content as GradleConfig} from '../data/code/getting-started/gradle.mdx';
import {Content as OptionJava} from '../data/code/getting-started/option.mdx';
import {Content as TryJava} from '../data/code/getting-started/try.mdx';
import {Content as ResultJava} from '../data/code/getting-started/result.mdx';
const base = import.meta.env.BASE_URL;
---

<DocsLayout title="Getting Started"
            description={`Get started with ${site.slug} functional programming library for Java`}>
    <div class="docs-content">
        <h1>Getting Started</h1>

        <div class="intro">
            <p>
                {site.slug} is a functional programming library for Java that provides essential tools and utilities
                for writing functional code in a type-safe and composable way.
            </p>
        </div>

        <h2>Installation</h2>

        <h3>Maven</h3>
        <p>Add the following dependency to your <code>pom.xml</code>:</p>
        <MavenConfig/>

        <h3>Gradle</h3>
        <p>Add the following to your <code>build.gradle</code>:</p>
        <GradleConfig/>

        <h2>Requirements</h2>
        <ul>
            <li>Java 24 or higher</li>
            <li>No additional dependencies required</li>
        </ul>

        <h2>Core Concepts</h2>

        <h3>Option</h3>
        <p>
            The <code>Option</code> type represents an optional value. It's a type-safe alternative to <code>null</code>.
        </p>
        <OptionJava/>

        <h3>Try</h3>
        <p>
            The <code>Try</code> type represents a computation that may either result in an exception or return a value.
        </p>
        <TryJava/>

        <h3>Result</h3>
        <p>
            The <code>Result</code> type represents a value of one of two possible types (a disjoint union).
        </p>
        <ResultJava/>

        <h2>Next Steps</h2>
        <ul>
            <li><a href={`${base}javadoc/index.html`} target="_blank" rel="noopener">Explore the API documentation</a></li>
            <li><a href={`${base}examples`}>Check out practical examples</a></li>
            <li><a href={site.github} target="_blank" rel="noopener">View source code on GitHub</a></li>
        </ul>
    </div>
</DocsLayout>

<style>
    .docs-content {
        max-width: 800px;
    }

    .intro {
        background-color: var(--color-surface);
        padding: 1.5rem;
        border-radius: 8px;
        border-left: 4px solid var(--color-primary);
        margin: 2rem 0;
    }

    .intro p {
        margin: 0;
        font-size: 1.125rem;
        line-height: 1.7;
    }

    h1 {
        border-bottom: 2px solid var(--color-border);
        padding-bottom: 0.5rem;
    }

    h2 {
        margin-top: 3rem;
        color: var(--color-text);
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
    }

    h3 {
        margin-top: 2rem;
        color: var(--color-primary);
    }

    ul {
        list-style-position: outside;
        padding-left: 1.5rem;
        margin: 1rem 0;
    }

    li {
        margin: 0.5rem 0;
        line-height: 1.6;
    }

    code {
        font-size: 0.9em;
    }

    pre {
        margin: 1.5rem 0;
        line-height: 1.5;
    }

    pre code {
        font-size: 0.875rem;
    }
</style>
